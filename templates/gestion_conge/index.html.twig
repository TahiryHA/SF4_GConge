{% extends 'base.html.twig' %}

{% block title %}GestionConge index{% endblock %}

{% block body %}
    <h1>GestionConge index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Valeur</th>
                <th>Date</th>
                <th>De</th>
                <th>DateInclus</th>
                <th>Commentaires</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gestion_conge in gestion_conges %}
            <tr>
                <td>{{ gestion_conge.id }}</td>
