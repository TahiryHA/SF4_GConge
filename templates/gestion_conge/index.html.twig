                <td>{{ gestion_conge.commentaires }}</td>
                <td>
                    <a href="{{ path('gestion_conge_show', {'id': gestion_conge.id}) }}">show</a>
                    <a href="{{ path('gestion_conge_edit', {'id': gestion_conge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
