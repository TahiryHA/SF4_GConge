{{form_start(userForm,{'attr':{
    'id':"formAddUser"
}})}}
<div class="row">
    <div class="col-12 col-sm-12">
        <div class="form-group row d-none" id="error_message">
            <div class="col-sm-12">
                <div class="alert alert-danger alert-dismissible">
                    <strong>Erreur!</strong> <span class="message"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Service *</label>
            <div class="col-sm-8">
                {{form_widget(userForm.service)}}
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Rôle *</label>
            <div class="col-sm-8">
                {{form_widget(userForm.role)}}
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Nom d'utilisateur *</label>
            <div class="col-sm-8">
                {{form_widget(userForm.username,{'attr':{
                    'class':"form-control",
                    'placeholder':'Nom d\'utilisateur'
                }})}}
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Nom</label>
            <div class="col-sm-8">
                {{form_widget(userForm.name,{'attr':{
                    'class':"form-control",
                    'placeholder':'Nom'
                }})}}
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Prènom</label>
            <div class="col-sm-8">
                {{form_widget(userForm.lastname,{'attr':{
                    'class':"form-control",
                    'placeholder':'Prènom'
                }})}}
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Adresse e-mail *</label>
            <div class="col-sm-8">
                {{form_widget(userForm.email,{'attr':{
                    'class':"form-control",
                    'placeholder':'Adresse e-mail'
                }})}}
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Tél</label>
            <div class="col-sm-8">
                {{form_widget(userForm.tel,{'attr':{
                    'class':"form-control",
                    'placeholder':'Tél'
                }})}}
            </div>
        </div>
    </div>
</div>

<div class="modal-footer no-bd">
    <button type="submit" id="" class="btn btn-default">Ajouter</button>
</div>
{{form_end(userForm)}}